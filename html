  <script>
    // Dados simulados
    let users = [];
    let transactions = [];
    let currentUser = null;

    // Alternar telas
    document.getElementById('login-link').addEventListener('click', () => {
      document.getElementById('register-section').classList.add('hidden');
      document.getElementById('login-section').classList.remove('hidden');
    });
    document.getElementById('register-link').addEventListener('click', () => {
      document.getElementById('login-section').classList.add('hidden');
      document.getElementById('register-section').classList.remove('hidden');
    });

    // Cadastro
    document.getElementById('register-form').addEventListener('submit', (e) => {
      e.preventDefault();
      const user = {
        id: Date.now(),
        businessName: document.getElementById('business-name').value,
        pixKey: document.getElementById('pix-key').value,
        logoUrl: document.getElementById('logo-url').value || 'https://via.placeholder.com/100',
        email: document.getElementById('email').value,
        password: document.getElementById('password').value,
        interfaceType: document.getElementById('interface-type').value
      };
      users.push(user);
      alert('Cadastro realizado! Faça login.');
      document.getElementById('register-form').reset();
      document.getElementById('register-section').classList.add('hidden');
      document.getElementById('login-section').classList.remove('hidden');
    });

    // Login
    document.getElementById('login-form').addEventListener('submit', (e) => {
      e.preventDefault();
      const email = document.getElementById('login-email').value;
      const password = document.getElementById('login-password').value;
      const user = users.find(u => u.email === email && u.password === password);
      if (user) {
        currentUser = user;
        document.getElementById('login-section').classList.add('hidden');
        document.getElementById('backoffice-section').classList.remove('hidden');
        renderBackoffice();
      } else {
        alert('E-mail ou senha inválidos.');
      }
    });

    // Renderizar Backoffice
    function renderBackoffice() {
      const link = `http://seusite.com/pix/${currentUser.id}`;
      document.getElementById('payment-link').innerHTML = `Link de Pagamento: <a href="${link}" target="_blank">${link}</a>`;
      document.getElementById('embed-code').textContent = `<iframe src="${link}" width="100%" height="600px"></iframe>`;
      const transactionsList = document.getElementById('transactions-list');
      transactionsList.innerHTML = '';
      transactions
        .filter(t => t.userId === currentUser.id)
        .forEach(t => {
          const details = t.interfaceType === 'complete' 
            ? `Cliente: ${t.clientName}, Produto: ${t.productName}, Quantidade: ${t.quantity}`
            : `Valor: R$ ${t.amount.toFixed(2)}`;
          const transactionItem = `
            <div class="border p-2 mb-2">
              <p>${details}</p>
              <p>Status: ${t.status}</p>
              <button onclick="generateReceipt(${t.id})" class="bg-blue-500 text-white px-2 py-1 rounded">Gerar Recibo</button>
              ${t.status === 'Pendente' ? `<button onclick="confirmTransaction(${t.id})" class="bg-green-500 text-white px-2 py-1 rounded">Confirmar</button>` : ''}
            </div>
          `;
          transactionsList.innerHTML += transactionItem;
        });
    }

    // Confirmar transação
    window.confirmTransaction = (transactionId) => {
      const transaction = transactions.find(t => t.id === transactionId);
      transaction.status = 'Confirmado';
      renderBackoffice();
    };

    // Gerar recibo
    window.generateReceipt = (transactionId) => {
      const { jsPDF } = window.jspdf;
      const doc = new jsPDF();
      const transaction = transactions.find(t => t.id === transactionId);
      doc.text(`Recibo - ${currentUser.businessName}`, 10, 10);
      doc.text(`Data: ${new Date(transaction.date).toLocaleString()}`, 10, 20);
      doc.text(`Chave Pix: ${currentUser.pixKey}`, 10, 30);
      if (transaction.interfaceType === 'complete') {
        doc.text(`Cliente: ${transaction.clientName}`, 10, 40);
        doc.text(`E-mail: ${transaction.clientEmail}`, 10, 50);
        if (transaction.clientCpf) doc.text(`CPF: ${transaction.clientCpf}`, 10, 60);
        doc.text(`Produto: ${transaction.productName}`, 10, 70);
        doc.text(`Quantidade: ${transaction.quantity}`, 10, 80);
        doc.text(`Valor Total: R$ ${transaction.amount.toFixed(2)}`, 10, 90);
      } else {
        doc.text(`Valor: R$ ${transaction.amount.toFixed(2)}`, 10, 40);
      }
      doc.save(`recibo_${transactionId}.pdf`);
    };

    // Interface Completa - Gerar Pagamento
    document.getElementById('payment-form-complete').addEventListener('submit', (e) => {
      e.preventDefault();
      const amount = parseFloat(document.getElementById('payment-amount-complete').value);
      if (!amount || amount <= 0) {
        alert('Insira um valor válido.');
        return;
      }
      const clientName = document.getElementById('client-name').value;
      const clientEmail = document.getElementById('client-email').value;
      const clientCpf = document.getElementById('client-cpf').value;
      const productName = document.getElementById('product-name').value;
      const quantity = parseInt(document.getElementById('product-quantity').value);
      document.getElementById('pix-key-complete').textContent = currentUser ? currentUser.pixKey : 'exemplo@dominio.com';
      document.getElementById('payment-details-complete').classList.remove('hidden');
      transactions.push({
        id: Date.now(),
        userId: currentUser ? currentUser.id : 0,
        interfaceType: 'complete',
        clientName,
        clientEmail,
        clientCpf,
        productName,
        quantity,
        amount,
        date: new Date(),
        status: 'Pendente'
      });
      document.getElementById('payment-form-complete').reset();
    });

    // Interface Completa - Confirmar Pagamento
    document.getElementById('confirm-payment-complete').addEventListener('click', () => {
      alert('Pagamento registrado! Aguardando confirmação do lojista.');
      document.getElementById('payment-details-complete').classList.add('hidden');
    });

    // Interface Simplificada - Gerar Pagamento
    document.getElementById('generate-payment-simplified').addEventListener('click', () => {
      const amount = parseFloat(document.getElementById('payment-amount-simplified').value);
      if (!amount || amount <= 0) {
        alert('Insira um valor válido.');
        return;
      }
      document.getElementById('pix-key-simplified').textContent = currentUser ? currentUser.pixKey : 'exemplo@dominio.com';
      document.getElementById('payment-details-simplified').classList.remove('hidden');
      transactions.push({
        id: Date.now(),
        userId: currentUser ? currentUser.id : 0,
        interfaceType: 'simplified',
        amount,
        date: new Date(),
        status: 'Pendente'
      });
      document.getElementById('payment-amount-simplified').value = '';
    });

    // Interface Simplificada - Confirmar Pagamento
    document.getElementById('confirm-payment-simplified').addEventListener('click', () => {
      alert('Pagamento registrado! Aguardando confirmação do lojista.');
      document.getElementById('payment-details-simplified').classList.add('hidden');
    });

    // Logout
    document.getElementById('logout').addEventListener('click', () => {
      currentUser = null;
      document.getElementById('backoffice-section').classList.add('hidden');
      document.getElementById('login-section').classList.remove('hidden');
    });

    // Simulação de acesso à página de pagamento
    if (window.location.pathname.includes('/pix/')) {
      document.getElementById('register-section').classList.add('hidden');
      document.getElementById('login-section').classList.add('hidden');
      document.getElementById('backoffice-section').classList.add('hidden');
      // Simula carregamento do lojista (em produção, buscar no backend)
      currentUser = users[0] || {
        businessName: 'Negócio Exemplo',
        pixKey: 'exemplo@dominio.com',
        logoUrl: 'https://via.placeholder.com/100',
        interfaceType: 'complete'
      };
      const section = currentUser.interfaceType === 'complete' ? 'payment-complete' : 'payment-simplified';
      document.getElementById(section).classList.remove('hidden');
      document.getElementById(`business-name-${currentUser.interfaceType}`).textContent = currentUser.businessName;
      document.getElementById(`business-logo-${currentUser.interfaceType}`).src = currentUser.logoUrl;
    }
  </script>
</body>
</html>
